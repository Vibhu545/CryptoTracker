<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.one.cryptotracker.cryptotracker.Presenter.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="CRYPTOTRACKER"
        android:id="@+id/responseText"/>

    <Button
        android:id="@+id/btBitCoin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btEthereum"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ethereum"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btLitecoin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Litecoin"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btDigitalCash"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Digitalcash"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btMonero"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Monero"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btDogecoin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Dogecoin"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text=""
        android:layout_gravity="center_horizontal"/>
</LinearLayout>

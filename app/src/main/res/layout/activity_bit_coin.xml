<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.one.cryptotracker.cryptotracker.Presenter.BitCoin">

    <EditText
        android:id="@+id/etThreshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Enter threshold"
        android:inputType="numberDecimal"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/btSetAlertBitCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alert"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/tvAlertSetBitCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="15sp"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/bitcoin"
        android:layout_marginLeft="116dp"/>
</LinearLayout>
